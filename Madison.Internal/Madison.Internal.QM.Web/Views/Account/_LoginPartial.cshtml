@model Madison.Internal.QM.Web.Models.LoginModel

@{
    ViewBag.Title = "Log in";
}

<form class="form-signin">
    <table style="width: 100%">
        <tr>
            <td style="text-align:right; vertical-align: middle; width: 50%;">
                @Html.TextBoxFor(Model => Model.UserName, new { @style="width: 60%; vertical-align: middle", @type="text", @class="input-block-level", @placeholder="Username", @tabIndex="1"})
            </td>
            <td rowspan="2" style="padding-left: 10px; vertical-align: top"><button class="btn btn-large btn-success" type="submit" tabindex="3">Begin</button></td>
        </tr>
        <tr>
            <td style="text-align:right; vertical-align: top; width: 50%;">
                @Html.TextBoxFor(Model => Model.Password, new { @style="width: 60%; vertical-align: middle", @type="password", @class="input-block-level", @placeholder="Password", @tabIndex="2"})
            </td>

        </tr>
        <tr>
            <td style="text-align:right; width: 50%;">@Html.ValidationSummary(true)</td>
            <td></td>
        </tr>
    </table>
</form>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}