        </div>

        <div>
            @Html.LabelFor(model => model.Property.City)
        </div>
        <div>
            @Html.EditorFor(model => model.Property.City)
            @Html.ValidationMessageFor(model => model.Property.City)
        </div>
        <div>
            @Html.LabelFor(model => model.Property.County)
        </div>
        <div>
            @Html.EditorFor(model => model.Property.County)
            @Html.ValidationMessageFor(model => model.Property.County)
        </div>
        <div>
            @Html.LabelFor(model => model.Property.State)
        </div>
        <div>
            @Html.EditorFor(model => model.Property.State)
            @Html.ValidationMessageFor(model => model.Property.State)
        </div>
        <div>
            @Html.LabelFor(model => model.Property.Zip)
        </div>
        <div>
            @Html.EditorFor(model => model.Property.Zip)
            @Html.ValidationMessageFor(model => model.Property.Zip)
        </div>

        <p>
            <input id="btnNext" type="submit" value="Next" class="btn btn-large btn-success" />
