@model Madison.Internal.QM.Web.ViewModels.BorrowerViewModel

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend class="lead">Property Info</legend>

        
        <div>
            @Html.LabelFor(model => model.Borrower.FirstName)
        </div>
        <div>
            @Html.EditorFor(model => model.Borrower.FirstName)
            @Html.ValidationMessageFor(model => model.Borrower.FirstName)
        </div>

        <div>
            @Html.LabelFor(model => model.Borrower.LastName)
        </div>
        <div>
            @Html.EditorFor(model => model.Borrower.LastName)
            @Html.ValidationMessageFor(model => model.Borrower.LastName)
        </div>

        <div>
            @Html.LabelFor(model => model.Property.PropertyType)
        </div>
        <div>
            @Html.DropDownListFor(model => model.Property.PropertyType.Id, new SelectList(Model.PropertyTypes, "Id", "Name"))
        </div>

        <div>
            @Html.LabelFor(model => model.Property.Address1)
        </div>
        <div>
            @Html.EditorFor(model => model.Property.Address1)
            @Html.ValidationMessageFor(model => model.Property.Address1)
        </div>

        <div>
            @Html.LabelFor(model => model.Property.Address2)
        </div>
        <div>
            @Html.EditorFor(model => model.Property.Address2)
